        {"id": "banner-text", "name": "Text", "type": "text"},

        {"id": "video-banner", "name": "Video Banner", "type": "container"},
        {"id": "video-container", "name": "Video Container", "type": "container"},
        {"id": "video", "name": "Video", "type": "video"},
        {"id": "video-subtitle", "name": "Subtitle", "type": "text"},
        {"id": "video-text", "name": "Text", "type": "text"},
        {"id": "video-button", "name": "Call to Action", "type": "link", "data": {"href": "#/optin"} },

        {"id": "details", "name": "Details", "type": "container"},
        {"id": "details-title", "name": "Title", "type": "text"},
        {"id": "details-subtitle", "name": "Subtitle", "type": "text"},
